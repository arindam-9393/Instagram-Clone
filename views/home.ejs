<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home - All Posts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      padding: 20px;
    }

    .navbar {
      display: flex;
      justify-content: flex-end;
      gap: 20px;
      margin-bottom: 20px;
    }

    .navbar a {
      text-decoration: none;
      color: white;
      background: #007bff;
      padding: 10px 18px;
      border-radius: 6px;
      font-weight: bold;
    }

    .container {
      max-width: 600px;
      margin: auto;
    }

    .post {
      background: white;
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 15px;
      box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
    }

    .like-btn {
      background: #ff4d4d;
      color: white;
      padding: 8px 14px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <!-- TOP NAV -->
  <div class="navbar">
    <a href="/create">Create Account</a>
    <a href="/login">Login</a>
  </div>

  <div class="container">
    <h2>All Posts</h2>

    <% if (postwa.length === 0) { %>
      <p>No posts yet.</p>
    <% } %>

    <% postwa.forEach(p => { %>
      <div class="post">
        <p><%= p.content %></p>

        <!-- Like count -->
        <p>❤️ <%= p.likes.length %> Likes</p>

        <!-- Like button -->
        <button class="like-btn" onclick="likePost('<%= p._id %>')">
  ❤ Like
</button>

<span id="like-count-<%= p._id %>">
  <%= p.likes.length %>
</span>

      </div>
    <% }) %>
  </div>
  <script>
    async function likePost(postId) {
    try {
        let res = await fetch(`/like/${postId}`, {
        method: "POST"
        });

        let data = await res.json();

    // Update like count instantly
        document.getElementById(`like-count-${postId}`).innerText = data.likes;
    }   catch (err) {
        console.log("Error:", err);
        }
    }
</script>


</body>
</html>
