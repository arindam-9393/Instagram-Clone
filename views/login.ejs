<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
  <style>
    :root{
      --bg-1: #0f172a;      /* slate-900 */
      --bg-2: #1e293b;      /* slate-800 */
      --card: rgba(255,255,255,.08);
      --border: rgba(255,255,255,.15);
      --text: #e5e7eb;      /* gray-200 */
      --muted: #94a3b8;     /* slate-400 */
      --primary: #6366f1;   /* indigo-500 */
      --primary-600: #5458ee;
      --danger: #ef4444;
      --focus: 0 0 0 4px rgba(99,102,241,.35);
      --radius: 16px;
      --shadow: 0 20px 50px rgba(0,0,0,.35), inset 0 1px 0 rgba(255,255,255,.06);
    }

    *{ box-sizing: border-box; }
    html,body{
      height:100%;
      margin:0;
      color: var(--text);
      background: radial-gradient(1200px 800px at 20% 10%, #111827 0%, var(--bg-1) 40%, #0b1024 100%),
                  linear-gradient(120deg, #0b1024 0%, #111827 100%);
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Inter, Arial, sans-serif;
    }

    .grid{
      min-height:100%;
      display:grid;
      place-items:center;
      padding:24px;
    }

    .card{
      width:100%;
      max-width:420px;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      backdrop-filter: blur(14px) saturate(120%);
      -webkit-backdrop-filter: blur(14px) saturate(120%);
      padding: 28px;
      animation: floatIn .6s cubic-bezier(.2,.75,.25,1) both;
    }

    @keyframes floatIn{
      from{ transform: translateY(14px) scale(.98); opacity: 0 }
      to{ transform: translateY(0) scale(1); opacity: 1 }
    }

    .brand{
      display:flex; align-items:center; gap:12px; margin-bottom:14px;
    }
    .logo{
      width:36px; height:36px; border-radius:10px;
      background: linear-gradient(135deg, var(--primary), #22d3ee);
      box-shadow: inset 0 0 0 2px rgba(255,255,255,.2), 0 10px 22px rgba(99,102,241,.35);
    }
    h1{
      font-size: 1.35rem; letter-spacing:.3px; margin:0;
    }
    p.sub{
      margin: 6px 0 18px; color: var(--muted); font-size: .95rem;
    }

    form{ display:grid; gap:14px; }
    .field{
      display:grid; gap:8px;
    }
    label{
      font-size:.92rem; color: var(--text);
    }
    .control{
      position:relative;
    }
    input[type="email"],
    input[type="text"],
    input[type="password"]{
      width:100%;
      padding: 12px 14px;
      padding-right: 42px;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: rgba(255,255,255,.06);
      color: var(--text);
      outline: none;
      transition: border .2s ease, box-shadow .2s ease, background .2s ease;
    }
    input::placeholder{ color: #9aa4b2; }
    input:focus{
      border-color: var(--primary);
      box-shadow: var(--focus);
      background: rgba(255,255,255,.08);
    }

    .toggle{
      position:absolute;
      right: 8px; top: 50%; transform: translateY(-50%);
      background: transparent; border:0; color: var(--muted);
      padding: 6px 8px; border-radius: 8px; cursor:pointer;
    }
    .toggle:focus-visible{ outline: none; box-shadow: var(--focus); }

    .row{
      display:flex; align-items:center; justify-content:space-between;
      gap:12px; margin-top: -4px;
    }
    .checkbox{
      display:flex; align-items:center; gap:10px; color: var(--muted);
      font-size:.92rem;
    }
    .checkbox input{ width:18px; height:18px; accent-color: var(--primary); }

    .link{
      color: #a5b4fc; text-decoration: none; font-size:.92rem;
    }
    .link:hover{ text-decoration: underline; }

    .btn{
      display:inline-flex; align-items:center; justify-content:center;
      width:100%;
      gap:10px;
      padding: 12px 16px;
      border-radius: 12px; border: 1px solid transparent;
      background: var(--primary); color: white; font-weight: 600;
      cursor:pointer; transition: transform .08s ease, filter .2s ease, background .2s ease;
    }
    .btn:hover{ filter: brightness(1.05); }
    .btn:active{ transform: translateY(1px); }
    .btn:focus-visible{ outline:none; box-shadow: var(--focus); }

    .divider{
      display:grid; grid-template-columns:1fr auto 1fr; align-items:center;
      gap:10px; color: var(--muted); font-size:.9rem; margin: 6px 0 -2px;
    }
    .divider::before, .divider::after{
      content:""; height:1px; background: var(--border);
    }

    .oauth{
      display:grid; gap:10px; margin-top:6px;
    }
    .oauth .btn{
      background: rgba(255,255,255,.06);
      color: var(--text);
      border-color: var(--border);
      font-weight: 500;
    }
    .oauth .btn:hover{ background: rgba(255,255,255,.08); }

    .footer{
      text-align:center; margin-top: 14px; color: var(--muted); font-size:.9rem;
    }
    .footer a{ color:#c7d2fe; text-decoration:none; }
    .footer a:hover{ text-decoration:underline; }

    /* Small screens */
    @media (max-width: 420px){
      .card{ padding: 22px; border-radius: 14px; }
      .btn{ padding: 12px 14px; }
    }

    /* Light mode preference */
    @media (prefers-color-scheme: light){
      :root{
        --bg-1: #f8fafc;
        --bg-2: #eef2ff;
        --card: rgba(255,255,255,.9);
        --border: rgba(0,0,0,.08);
        --text: #0f172a;
        --muted: #475569;
        --shadow: 0 20px 55px rgba(2,6,23,.12), inset 0 1px 0 rgba(255,255,255,.6);
      }
      input{ background: rgba(0,0,0,.03); }
      input:focus{ background: rgba(0,0,0,.04); }
      .oauth .btn{ background: rgba(0,0,0,.03); }
      .logo{ box-shadow: inset 0 0 0 2px rgba(255,255,255,.9), 0 10px 22px rgba(99,102,241,.25); }
    }
  </style>
</head>
<body>
  <main class="grid">
    <section class="card" role="region" aria-labelledby="login-title">
      <div class="brand">
        <div class="logo" aria-hidden="true"></div>
        <h1 id="login-title">Welcome back</h1>
      </div>
      <p class="sub">Sign in to continue to your dashboard.</p>

      <form action="/login" method="POST" novalidate>
        <div class="field">
          <label for="email">Email</label>
          <div class="control">
            <input type="email" id="email" name="email" placeholder="you@example.com" autocomplete="email" required />
          </div>
        </div>

        <div class="field">
          <label for="password">Password</label>
          <div class="control">
            <input type="password" id="password" name="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" autocomplete="current-password" required minlength="6" />
            <button class="toggle" type="button" aria-label="Show password" id="togglePwd">üëÅ</button>
          </div>
        </div>

        <div class="row">
          <label class="checkbox">
            <input type="checkbox" name="remember" />
            Remember me
          </label>
          <a class="link" href="/forgot">Forgot password?</a>
        </div>

        <button class="btn" type="submit">Sign in</button>

        <div class="divider" aria-hidden="true">or</div>

        <div class="oauth">
          <button class="btn" type="button" onclick="alert('Hook up Google OAuth here')">Continue with Google</button>
          <button class="btn" type="button" onclick="alert('Hook up GitHub OAuth here')">Continue with GitHub</button>
        </div>

        <p class="footer">No account? <a href="/">Create one</a></p>
      </form>
    </section>
  </main>

  <script>
    // Show/Hide password
    const pwd = document.getElementById('password');
    const toggle = document.getElementById('togglePwd');
    toggle.addEventListener('click', () => {
      const showing = pwd.type === 'text';
      pwd.type = showing ? 'password' : 'text';
      toggle.setAttribute('aria-label', showing ? 'Show password' : 'Hide password');
    });

    // Simple client-side validation hint (optional)
    document.querySelector('form').addEventListener('submit', (e) => {
      const email = document.getElementById('email');
      if (!email.value.trim() || !pwd.value.trim()) {
        e.preventDefault();
        alert('Please enter your email and password.');
      }
    });
  </script>
</body>
</html>
